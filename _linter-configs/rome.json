{
	"$schema": "https://raw.githubusercontent.com/rome/tools/main/npm/rome/configuration_schema.json",
	"files": {
		"ignore": [
			"node_modules/**"
		]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentStyle": "tab",
		"indentSize": 3,
		"formatWithErrors": true
	},
	"javascript": {
		"globals": [
			"ObjC",
			"Application",
			"delay",
			"$"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": false,
		"rules": {
			"all": true
		}
	}
}
