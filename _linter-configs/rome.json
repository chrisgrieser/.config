{
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentStyle": "tab",
		"indentSize": 3,
		"formatWithErrors": true
	},
	"javascript": {
		"globals": []
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": false,
		"rules": {
			"all": true
		}
	},
	"files": {
		"ignore": [
			"globals.d.ts",
			"node_modules/**"
		]
	}
}
