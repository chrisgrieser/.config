{
	"$schema": "https://raw.githubusercontent.com/biomejs/biome/main/editors/vscode/configuration_schema.json",
	"files": {
		"ignore": ["node_modules/**"]
	},
	"formatter": {
		"lineWidth": 110,
		"indentStyle": "tab",
		"indentSize": 3,
		"formatWithErrors": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"javascript": {
		"globals": ["ObjC", "Application", "delay", "Path", "$"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": { "all": false },
			"style": {
				"useBlockStatements": "off",
				"useConst": "warn",
				"noParameterAssign": "off",
				"useTemplate": "off",
				"noUnusedTemplateLiteral": "warn",
				"useSingleVarDeclarator": "off"
			}
		}
	}
}
