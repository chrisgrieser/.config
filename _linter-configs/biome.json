{
	"$schema": "https://raw.githubusercontent.com/biomejs/biome/main/editors/vscode/configuration_schema.json",
	"files": {
		"ignore": ["node_modules/**"]
	},
	"formatter": {
		"lineWidth": 110,
		"indentStyle": "tab",
		"indentSize": 3,
		"formatWithErrors": true
	},
	"organizeImports": { "enabled": true },
	"vcs": { "enabled": true, "clientKind": "git" },
	"json": {
		"parser": { "allowComments": true }
	},
	"javascript": {
		"globals": ["ObjC", "Application", "delay", "Path", "$"]
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": {
				"noExcessiveComplexity": "off"
			},
			"suspicious": {
				"noConsoleLog": "off"
			},
			"style": {
				"useTemplate": "off",
				"useConst": "warn",
				"noUnusedTemplateLiteral": "warn",
				"useSingleVarDeclarator": "off",
				"useNamingConvention": "warn"
			}
		}
	}
}
