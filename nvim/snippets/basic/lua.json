{
	"trim trailing line break": {
		"prefix": "trim trailing line break" ,
		"body": ":gsub(\"\\n$\", \"\")"
	},
	"ignore start/end (stylua)": {
		"prefix": "ignore start/end (stylua)",
		"body": [
			"-- stylua: ignore start",
			"-- stylua: ignore end"
		]
	},
	"ignore block (stylua)": {
		"prefix": "ignore block (stylua)",
		"body": "-- stylua: ignore"
	},
	"ignore (selene)": {
		"prefix": "ignore (selene)",
		"body": "-- selene: allow(${1:rule_name})"
	},
	"if": {
		"prefix": "if",
		"body": [
			"if ${1:true} then",
			"\t$0",
			"end"
		]
	},
	"if .. else": {
		"prefix": "if .. else",
		"body": [
			"if ${1:true} then",
			"\t$2",
			"else",
			"\t$0",
			"end"
		]
	},
	"guard clause ending": {
		"prefix": "return end",
		"body": "return end"
	},
	"guard clause ending (+)": {
		"prefix": "then return end",
		"body": "then return end"
	},
	"string format": {
		"prefix": "string format",
		"body": "string.format(\"$0%s\", ${1:var})"
	},
	"home": {
		"prefix": "home",
		"body": "os.getenv(\"HOME\")"
	},
	"for (list)": {
		"prefix": [
			"foreach",
			"for (list)"
		],
		"body": [
			"for _, ${1:v} in pairs(${2:table}) do",
			"\t$0",
			"end"
		]
	},
	"forline": {
		"prefix": "forline",
		"body": [
			"f = io.open(${1:\"${2:filename}\"}, \"${3:r}\")\n",
			"while true do",
			"\tline = f:read()",
			"\tif line == nil then break end\n",
			"\t${0:-- code}",
			"end"
		],
		"description": "read file line by line"
	}
}
