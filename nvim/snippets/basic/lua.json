{
	"if": {
		"prefix": "if",
		"body": [
			"if ${1:true} then",
			"\t$0",
			"end"
		]
	},
	"guard clause ending": {
		"prefix": "then ",
		"body": "then return end\n$0" 
	},
	"elseif": {
		"prefix": "elseif",
		"body": [
			"elseif ${1:true} then",
			"\t$0"
		]
	},
	"for (list)": {
		"prefix": ["foreach", "for (list)"],
		"body": [
			"for i, ${1:x} in pairs(${2:table}) do",
			"\t$0",
			"end"
		]
	},
	"forline": {
		"prefix": "forline",
		"body": [
			"f = io.open(${1:\"${2:filename}\"}, \"${3:r}\")\n",
			"while true do",
			"\tline = f:read()",
			"\tif line == nil then break end\n",
			"\t${0:-- code}",
			"end"
		],
		"description": "read file line by line"
	}
}
