{
	"trim trailing line break": {
		"prefix": [
			":gsub",
			"gsub",
			"trim trailing line break"
		],
		"body": ":gsub(\"0$\", \"\")"
	},
	"ignore (stylua)": {
		"prefix": "ignore (stylua)",
		"body": [
			"-- stylua: ignore start",
			"-- stylua: ignore end"
		]
	},
	"ignore block (stylua)": {
		"prefix": "ignore block (stylua)",
		"body": "-- stylua: ignore"
	},
	"ignore (selene)": {
		"prefix": "ignore (selene)",
		"body": "-- selene: allow(${1:rule_name})"
	},
	"if": {
		"prefix": "if",
		"body": [
			"if ${1:true} then",
			"\t$0",
			"end"
		]
	},
	"guard clause ending": {
		"prefix": "then return end",
		"body": "then return end"
	},
	"for (list)": {
		"prefix": [
			"foreach",
			"for (list)"
		],
		"body": [
			"for _, ${1:v} in pairs(${2:table}) do",
			"\t$0",
			"end"
		]
	},
	"forline": {
		"prefix": "forline",
		"body": [
			"f = io.open(${1:\"${2:filename}\"}, \"${3:r}\")\n",
			"while true do",
			"\tline = f:read()",
			"\tif line == nil then break end\n",
			"\t${0:-- code}",
			"end"
		],
		"description": "read file line by line"
	}
}
