{
	"Keymap": {
		"prefix": "Keymap",
		"body": "Keymap(\"n\", \"${1:LHS}\", ${2:RHS}, { desc = \"$3\" })"
	},
	"Keymap (multi mode)": {
		"prefix": "Keymap (multi-mode)",
		"body": "Keymap({ \"n\", \"x\" }, \"${1:LHS}\", ${2:RHS}, { desc = \"$3\" })"
	},
	"Keymap (buffer)": {
		"prefix": "Keymap (buffer)",
		"body": "Keymap(\"n\", \"${1:LHS}\", ${2:RHS}, { desc = \"$3\", buffer = true })"
	},
	"buffer arg for keymap": {
		"prefix": "buffer = true",
		"body": "buffer = true"
	},
	"plugin spec (lazy.nvim)": {
		"prefix": "plugin spec (lazy.nvim)",
		"body": [
			"{ -- ${2:description}",
			"\t\"${1:github_repo}\",",
			"\tevent = \"${3:VeryLazy}\",",
			"\tconfig = function()",
			"\t\trequire(\"${4:module-name}\").setup{",
			"\t\t\t$0",
			"\t\t}",
			"\tend,",
			"},"
		]
	},
	"input (vim.ui)": {
		"prefix": "input (vim.ui)",
		"body": [
			"vim.ui.input({ prompt = \"${1:prompt_msg}\"}, function (input)",
			"\tif not(input) then return end",
			"\t$2",
			"end)"
		]
	},
	"select (vim.ui)": {
		"prefix": "select (vim.ui)",
		"body": [
			"local ${1:list} = {}",
			"vim.ui.select(${1:list}, { prompt = \"${2:prompt_msg}\" }, function (choice)",
			"\tif not choice then return end",
			"\t$3",
			"end)"
		]
	},
	"autocmd": {
		"prefix": "Autocmd (short)",
		"body": [
			"Autocmd(\"${1:event}\", {",
			"\tcallback = function()",
			"\t\t$0",
			"\tend,",
			"})"
		]
	},
	"autocmd (unabbr)": {
		"prefix": "Autocmd (unabbr)",
		"body": [
			"vim.api.nvim_create_autocmd(\"${1:event}\", {",
			"\tcallback = function()",
			"\t\t$0",
			"\tend,",
			"})"
		]
	},
	"autocmd (FileType)": {
		"prefix": "Autocmd (FileType)" ,
		"body": [
			"Autocmd(\"FileType\", {",
			"\tpattern = \"${2:ft}\",",
			"\tcallback = function()",
			"\t\t$3",
			"\tend,",
			"})"
		]
	}
}
