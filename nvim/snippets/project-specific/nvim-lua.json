{
	"keymap": {
		"prefix": "keymap",
		"body": "keymap(\"n\", \"${1:LHS}\", ${2:\"RHS\"}, { desc = \"$3\" })"
	},
	"nvim-utils (require)": {
		"prefix": "utils (require)",
		"body": "local u = require(\"config.utils\")"
	},
	"keymap (multi-mode)": {
		"prefix": "keymap (multi-mode)",
		"body": "keymap({ \"n\", \"x\" }, \"${1:LHS}\", ${2:\"RHS\"}, { desc = \"$3\" })"
	},
	"keymap (buffer)": {
		"prefix": "keymap (buffer)",
		"body": "keymap(\"n\", \"${1:LHS}\", ${2:\"RHS\"}, { desc = \"$3\", buffer = true })"
	},
	"plugin spec (lazy.nvim)": {
		"prefix": "plugin spec (lazy.nvim)",
		"body": [
			"{",
			"\t\"$1\",",
			"\t${2|event = \"VeryLazy\",event = \"LspAttach\",lazy = true,cmd = \"\"|},",
			"\topts = {",
			"\t\t$0",
			"\t},",
			"},"
		]
	},
	"input (vim.ui)": {
		"prefix": "input (vim.ui)",
		"body": [
			"vim.ui.input({ prompt = \"${1:prompt_msg}\"}, function (input)",
			"\tif not(input) then return end",
			"\t$2",
			"end)"
		]
	},
	"select (vim.ui)": {
		"prefix": "select (vim.ui)",
		"body": [
			"local ${1:list} = {}",
			"vim.ui.select(${1:list}, { prompt = \"${2:prompt_msg}\" }, function (choice)",
			"\tif not choice then return end",
			"\t$3",
			"end)"
		]
	},
	"autocmd": {
		"prefix": "autocmd (short)",
		"body": [
			"autocmd(\"${1|BufReadPost,ColorScheme,VeryLazy|}\", {",
			"\tcallback = function()",
			"\t\t$0",
			"\tend,",
			"})"
		]
	},
	"autocmd (unabbr)": {
		"prefix": "autocmd (unabbr)",
		"body": [
			"vim.api.nvim_create_autocmd(\"${1|BufReadPost,VimEnter,UIEnter,BufReadPre,CmdlineEnter,LspAttach,WinEnter,FocusGained,FocusLost,WinLeave,BufLeave,BufWritePre,BufWritePost|}\", {",
			"\tcallback = function()",
			"\t\t$0",
			"\tend,",
			"})"
		]
	},
	"autocmd (FileType)": {
		"prefix": "autocmd (FileType)",
		"body": [
			"vim.api.nvim_create_autocmd(\"FileType\", {",
			"\tpattern = \"${2:ft}\",",
			"\tcallback = function()",
			"\t\t$3",
			"\tend,",
			"})"
		]
	}
}
