{
	// use the schema from the local biome package installed via Mason
	"$schema": "/Users/chrisgrieser/.local/share/nvim/mason/packages/biome/node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"javascript": {
		"globals": [
			"ObjC", // JXA variables
			"Application",
			"delay",
			"Path",
			"$",
			"dv", // dataview
			"view", // vimrc jsfile
			"Notice" // Obsidian API (used for vimrc jsfile)
		]
	},
	"formatter": {
		"lineWidth": 100,
		"indentStyle": "tab",
		"formatWithErrors": true
	},
	"linter": {
		"rules": {
			"all": true,
			"nursery": {
				"all": true,
				"noConsole": "off",
				"noNodejsModules": "off"
			},
			"suspicious": {
				"noConsoleLog": "off" // JXA does not allow `console.info`, so we need `console.log`
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "off",
				"useSimplifiedLogicExpression": "off" // complains about negated and-conditions
			},
			"style": {
				"useBlockStatements": "off",
				"useTemplate": "off", // too strict, simple concatenations are fine
				"noParameterAssign": "off",
				"useNamingConvention": { "level": "warn", "options": { "strictCase": false } }
			}
		}
	}
}
