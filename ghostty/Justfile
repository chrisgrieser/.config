set quiet := true

reload:
    #!/usr/bin/osascript
    tell application "System Events"
        if not ((name of processes) contains "ghostty") then
            tell application "Ghostty" to launch
            delay 0.1
        end if
        tell process "ghostty"
            set frontmost to true
            click menu item "Reload Configuration" of menu "Ghostty" of menu bar 1
        end tell
    end tell
    return "" # to silence return

inspect-keybindings:
    osascript -e 'tell application "Shortcuts" to run shortcut named "ghostty-input" with input "ghostty +list-keybinds"'

theme-preview:
    osascript -e 'tell application "Shortcuts" to run shortcut named "ghostty-input" with input "ghostty +list-themes"'
