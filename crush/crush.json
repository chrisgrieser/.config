{
	"models": {
		"large": { "model": "gpt-4.1-mini", "provider": "openai" },
		"small": { "model": "gpt-4.1-nano", "provider": "openai" }
	},
	"providers": {
		"openai": {
			"api_key": "$(cat \"$HOME/Library/Mobile Documents/com~apple~CloudDocs/Dotfolder/private dotfiles/openai-api-key-for-crush-cli.txt\")"
		}
	},
	"lsp": {
		"typescript": { "command": "typescript-language-server", "args": ["--stdio"] },
		"javascript": { "command": "typescript-language-server", "args": ["--stdio"] },
		"swift": { "command": "sourcekit-lsp" },
		"lua": { "command": "lua-language-server" },
		"json": { "command": "vscode-json-language-server", "args": ["--stdio"] },
		"markdown": { "command": "marksman", "args": ["server"] },
		"python": { "command": "basedpyright-langserver", "args": ["--stdio"] }
	},
	"options": {},

	"$schema": "https://charm.land/crush.json"
}
