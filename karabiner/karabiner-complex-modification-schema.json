{
	"$comment": "https://docs.github.com/en/github/administering-a-repository/displaying-a-sponsor-button-in-your-repository",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"additionalProperties": false,
	"title": "Complex Modification for the macOS app Karabiner Elements",
	"type": "object",
	"definitions": {
		"modifier": {
			"type": "string",
			"enum": ["command", "control", "fn", "shift", "option"]
		},
		"rule": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["basic"]
				},
				"from": {
					"type": "object",
					"properties": {
						"key_code": {
							"type": "string"
						},
						"modifiers": {
							"type": "object",
							"properties": {
								"mandatory": {
									"type": "array",
									"items": {
										"$ref": "#/definitions/modifier"
									}
								},
								"optional": {
									"type": "array",
									"items": {
										"$ref": "#/definitions/modifier"
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"properties": {
		"title": {
			"title": "Title",
			"description": "Title of the Complex Modification",
			"type": ["string", "null"]
		},
		"homepage": {
			"title": "Homepage",
			"description": "Homepage of the Complex Modification",
			"type": ["string", "null"],
			"format": "uri-reference"
		},
		"rules": {
			"title": "Ruleset",
			"description": "Ruleset of the Complex Modification",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"manipulators": {
						"type": "array",
						"items": {
							"$ref": "#/definitions/rule"
						}
					},
					"description": {
						"type": ["string", "null"]
					}
				}
			}
		}
	}
}
