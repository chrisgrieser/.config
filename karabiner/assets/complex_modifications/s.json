{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "manipulators": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "from": {
                  "type": "object",
                  "properties": {
                    "key_code": {
                      "type": "string"
                    },
                    "modifiers": {
                      "type": "object",
                      "properties": {
                        "mandatory": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "simultaneous": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "key_code": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "key_code"
                        ]
                      }
                    }
                  }
                },
                "to_if_alone": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "key_code": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "key_code"
                    ]
                  }
                },
                "to": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "key_code": {
                        "type": "string"
                      },
                      "modifiers": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "shell_command": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "shell_command",
                      "key_code",
                      "modifiers"
                    ]
                  }
                },
                "to_if_held_down": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "shell_command": {
                        "type": "string"
                      }
                    }
                  }
                },
                "conditions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string"
                      },
                      "bundle_identifiers": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "file_paths": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": [
                      "type"
                    ]
                  }
                },
                "parameters": {
                  "type": "object",
                  "properties": {
                    "basic.simultaneous_threshold_milliseconds": {
                      "type": "number"
                    }
                  }
                }
              },
              "required": [
                "type",
                "from",
                "to_if_alone",
                "to",
                "conditions",
                "parameters"
              ]
            }
          }
        },
        "required": [
          "description",
          "manipulators"
        ]
      }
    }
  }
}
