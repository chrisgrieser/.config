#───────────────────────────────────────────────────────────────────────────────

# Setup for delta (`brew install git-delta`)

[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[delta]
	tabs = 2

	# use n and N to move between diff sections
	navigate = true

	# side-by-side-view: deactivate line numbers but keep vertical separator
	line-numbers-left-format = ""
	line-numbers-right-format = "│ "

	# grep output as clickable links https://dandavison.github.io/delta/grep.html
	# this also makes links from git-log clickable (https://github.com/wez/wezterm/discussions/3618)
	hyperlinks = true
	hyperlinks-file-link-format = "file-line://{path}:{line}"
